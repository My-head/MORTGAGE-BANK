      <ImageView fitHeight="454.0" fitWidth="881.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@WhiteBackground.jpg" />
         </image>
      </ImageView>
      <ImageView fitHeight="345.0" fitWidth="704.0" layoutX="109.0" layoutY="68.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@Bank.jpg" />
         </image>
      </ImageView>
      <TextField fx:id="FieldOfLogin" layoutX="326.0" layoutY="182.0" onAction="#ReturnLogin" prefHeight="26.0" prefWidth="170.0" promptText="Логин" />
